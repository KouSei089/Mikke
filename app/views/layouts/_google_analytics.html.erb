<script async="" src="https://www.googletagmanager.com/gtag/js?id=<%= ::Temple::Utils.escape_html_safe((トラッキングID)) %>">
</script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'トラッキングID');
  if (<%= ::Temple::Utils.escape_html_safe((raw current_user.to_json)) %>) {
    gtag('set', {'user_id': <%= ::Temple::Utils.escape_html_safe((raw current_user.to_json)) %>.id});
  }
</script>

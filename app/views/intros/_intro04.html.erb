   data: [230, 344, 500, 100, 230, 1200],
   fill:true,
   borderColor: '#f6d55c',
   backgroundColor: "rgba(240,216,121,0.8)",
   pointBackgroundColor: "#f6d55c",
   pointBorderWidth: 2,
   pointHoverBackgroundColor: "#fff",
   pointHoverBorderWidth: 2,
   lineTension:0.45
  }]
 },
 options: {
  responsive: true,
  options: {
        scales: {
            yAxes: {
                    beginAtZero:true
                }

        }
    }
 }
});

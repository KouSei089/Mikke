<div class="bg-ivory">
  <%= render 'shared/top_logo' %>
  <%= render 'shared/flash_message' %>
  <%= form_with url: password_resets_path, local: true do |f| %>
    <div class="flex flex-col mx-32 lg:mx-64 px-0 lg:px-48">
      <div class="text-2xl mb-3 text-matte">再設定のメールを送信します</div>
      <p class="text-matte">入力いただいたメールアドレス宛に再設定のご案内メールがとどきます。</p>
      <div class="my-12 lg:my-6">
        <%= f.text_field :email, class: 'text-center rounded-full w-full py-12 lg:py-8 bg-white text-matte placeholder-gray-300 text-5xl lg:text-2xl border-white focus:border-white focus:ring focus:ring-white focus:ring-opacity-50 shadow-inner font-thin md:font-light', placeholder: "メールアドレス" %>
      </div>
      <%= f.submit "メールを送信", class: 'text-center rounded-full w-full mt-5 py-12 lg:py-8 bg-matte text-natural placeholder-gray-300 text-5xl lg:text-2xl font-thin md:font-light' %>
    </div>
  <% end %>
  <div class="text-center mt-5">
    <%= link_to "トップページはこちら", new_initial_path, class: "text-2xl text-matte border-b-2 border-matte" %>
  </div>
</div>

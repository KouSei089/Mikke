<div class="p-8">
    <div class="bg-natural rounded-3xl shadow-lg">
      <div class="p-16">
        <div>
          <h1 class="font-bold text-lg text-dark-black mb-1">月</h1>
          <h1 class="font-bold text-lg text-dark-black mb-1 text-center"><%= @diary.title %></h1>
        </div>
        <div class="mt-8 text-center">
          <p class="text-gray-600"><%=safe_join(@diary.text.split("\n"),tag(:br))%></p>
          <button class="mt-6 bg-dark-black text-natural hover:bg-white hover:text-dark-black rounded-full px-12 py-3 shadow-lg focus:outline-none">
            <%= link_to '編集', edit_diary_path %>
          </button>
          <button class="mt-6 bg-dark-black text-natural hover:bg-white hover:text-dark-black rounded-full px-12 py-3 shadow-lg focus:outline-none">
            <%= link_to '削除', @diary, method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </button>
        </div>
      </div>
    </div>
  </div>

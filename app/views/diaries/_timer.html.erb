<div x-data="{isShow: true}" class="bg-ivory rounded px-8 pt-3 pb-3">
  <div class="flex justify-center mb-2">
    <label for="toogleButton" class="flex items-center cursor-pointer">
      <div class="md:text-4xl font-thin md:font-light px-2">タイマー</div>
      <div class="relative">
        <input id="toogleButton" type="checkbox" class="hidden" @click="isShow = !isShow" />
        <div class="toggle-path bg-ice-green w-9 md:w-16 h-5 md:h-9 rounded-full shadow-inner"></div>
        <div class="toggle-circle absolute w-3.5 md:w-7 h-3.5 md:h-7 bg-white rounded-full shadow"></div>
      </div>
    </label>
  </div>
  <form name="timer">
    <div x-show="isShow" class="flex items-center justify-center border-b border-matte w-auto relative">
      <input type="tel" value="10" maxlength="2" oninput="value = value.replace(/[^0-9]+/i,'');" class="bg-ivory md:text-6xl border rounded w-12 md:w-24 py-2 px-3 text-matte border-ivory focus:border-natural focus:ring-0 font-thin">
      <p class="text-matte mr-3 md:mr-4 md:text-4xl font-thin">min</p>
      <input type="tel" value="00" maxlength="2" oninput="value = value.replace(/[^0-9]+/i,'');" class="bg-ivory md:text-6xl border rounded w-12 md:w-24 py-2 px-3 text-matte border-ivory focus:border-natural focus:ring-0 mr-3 font-thin">
      <p class="text-matte mr-3 md:mr-4 md:text-4xl font-thin">sec</p>

      <div x-data="{ open: true }">
        <div x-show="open"  @click="open = false">
          <%= button_tag type: "button", class: "py-2 px-3 bg-ivory text-matte hover:opacity-75", onclick: "cntStart()" do %>
            <i class="fas fa-play fa-sm md:text-4xl"></i>
          <% end %>
        </div>
        <div x-show="!open" @click="open = true">
          <%= button_tag type: "button", class: "py-2 px-3 bg-ivory text-matte hover:opacity-75", onclick: "cntStop()" do %>
            <i class="fas fa-pause md:text-4xl"></i>
          <% end %>
        </div>
      </div>
      <p class="text-matte text-xs absolute bottom-0 right-0">※時間を設定することができます。</p>
    </div>
  </form>
</div>

<%= form_with model: @diary, local: true do |f| %>
<div class="flex justify-between mb-5 px-64">
  <div class="flex justify-start">
    <%= render 'shared/back_button' %>
    <h1 class="text-4xl text-dark-black">今の感情を選んでみましょう。</h1>
  </div>
  <%= button_tag type: 'submit', class: "text-6xl text-light-blue hover:opacity-75" do %>
    <i class="fab fa-telegram-plane"></i>
  <% end %>
</div>
<section class="grid grid-cols-3 lg:grid-cols-6 gap-4 mx-auto xl:mx-64 text-center">
  <%= f.collection_check_boxes :sentiment_ids, Sentiment.all, :id, :name,{ checked: @diary.sentiment_ids.map(&:to_param) } do |t| %>
    <% if ["激怒", "怒り", "苛立ち"].include?(t.text)  %>
      <%= t.label(class: "relative bg-red-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-3xl rounded-tr-2xl rounded-bl-2xl rounded-br-3xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-red-200 text-red-400 rounded-full") + t.text } %>
    <% elsif ["警戒", "予期", "関心"].include?(t.text) %>
      <%= t.label(class: "relative bg-orange-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-2xl rounded-tr-3xl rounded-bl-3xl rounded-br-2xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-orange-200 text-orange-400 rounded-full") + t.text } %>
    <% elsif ["夢心地", "喜び", "平穏"].include?(t.text) %>
      <%= t.label(class: "relative bg-yellow-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-3xl rounded-tr-3xl rounded-bl-2xl rounded-br-xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-yellow-200 text-yellow-400 rounded-full") + t.text } %>
    <% elsif ["尊い", "信頼", "容認"].include?(t.text) %>
      <%= t.label(class: "relative bg-teal-100 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-xl rounded-tr-3xl rounded-bl-3xl rounded-br-2xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-teal-100 text-teal-300 rounded-full") + t.text } %>
    <% elsif ["恐れ", "心配", "不安"].include?(t.text) %>
      <%= t.label(class: "relative bg-green-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-xl rounded-tr-3xl rounded-bl-2xl rounded-br-2xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-green-200 text-green-400 rounded-full") + t.text } %>
    <% elsif ["驚愕", "驚き", "動揺"].include?(t.text) %>
      <%= t.label(class: "relative bg-blue-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-2xl rounded-tr-xl rounded-bl-2xl rounded-br-3xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-blue-200 text-blue-400 rounded-full") + t.text } %>
    <% elsif ["悲劇", "悲しみ", "感傷"].include?(t.text) %>
      <%= t.label(class: "relative bg-indigo-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-3xl rounded-tr-2xl rounded-bl-xl rounded-br-3xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-indigo-200 text-indigo-400 rounded-full") + t.text } %>
    <% elsif ["憎む", "嫌悪", "退屈"].include?(t.text) %>
      <%= t.label(class: "relative bg-purple-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-xl rounded-tr-3xl rounded-bl-3xl rounded-br-2xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-purple-200 text-purple-400 rounded-full") + t.text } %>
    <% else %>
      <%= t.label(class: "relative bg-gray-200 text-dark-black py-3 px-5 mx-20 my-5 lg:m-5 xl:m-8 rounded-tl-3xl rounded-tr-2xl rounded-bl-2xl rounded-br-3xl"){ t.check_box(class: "absolute inset-0 focus:ring-0 border-gray-200 text-gray-400 rounded-full") + t.text } %>
    <% end %>
  <% end %>
</section>
<%= f.hidden_field :title %>
<%= f.hidden_field :text %>
<% end %>

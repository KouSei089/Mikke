<div class="col-span-2 lg:col-span-1 m-8">
  <h3 class="text-4xl text-dark-black mb-2 font-thin"><%= l soliloquy.created_at, format: :day %></h3>
  <div class="bg-natural rounded-full h-10 w-10 flex items-center justify-center relative">
    <h4 class="text-lg text-dark-black"><%= l soliloquy.created_at, format: :day_of_week %></h4>
    <%= render 'diaries/wday', object: soliloquy %>
  </div>
</div>
<div class="col-span-10 lg:col-span-5 mx-8 pt-16">
  <div class="bg-white rounded-3xl mb-8">
    <div class="p-4 flex justify-center relative">
      <div class="text-center">
        <p class="text-gray-600"><%= soliloquy.text %></p>
      </div>
      <div class="absolute right-32 bottom-1 flex justify-center">
        <div class="rounded-full h-12 w-12 flex items-center justify-center bg-white text-dark-black">
          <%= link_to heroicon('pencil-alt', style: :outline,class_name: 'h-5 w-5 text-dark-black'), edit_soliloquy_path(soliloquy) %>
        </div>
        <div class="rounded-full h-12 w-12 flex items-center justify-center bg-white text-dark-black">
        <%= link_to heroicon('trash', style: :outline,class_name: 'h-5 w-5 text-dark-black'), soliloquy_path(soliloquy), data: { confirm: 'Are you sure?' }, method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>

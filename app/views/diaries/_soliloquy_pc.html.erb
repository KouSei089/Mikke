<div class="flex justify-center">
  <div class="p-8">
    <h3 class="text-4xl text-matte mb-2 font-thin"><%= l soliloquy.created_at, format: :day %></h3>
    <div class="bg-white rounded-full h-10 w-10 flex items-center justify-center relative">
      <h4 class="text-lg text-matte"><%= l soliloquy.created_at, format: :day_of_week %></h4>
      <%= render 'diaries/wday', object: soliloquy %>
    </div>
  </div>
  <div class="pt-16">
    <div class="bg-white rounded-3xl">
      <div class="flex justify-center relative h-32 w-64 px-56 pt-12">
        <div class="text-center">
          <p class="text-gray-600 w-48"><%= soliloquy.text %></p>
        </div>
        <div class="absolute right-0 bottom-0 flex justify-center">
          <div class="rounded-full h-8 w-8 flex items-center justify-center bg-white text-matte hover:opacity-75">
            <%= link_to heroicon('pencil-alt', style: :outline,class_name: 'h-4 w-4 text-matte'), edit_soliloquy_path(soliloquy) %>
          </div>
          <div class="rounded-full h-8 w-8 flex items-center justify-center bg-white text-matte">
            <%= render 'diaries/delete_soliloquy', soliloquy: soliloquy %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

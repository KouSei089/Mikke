<div class="flex justify-center">
  <div class="p-8">
    <h1 class="text-4xl text-dark-black mb-2 font-thin"><%= l soliloquy.created_at, format: :day %></h1>
    <div class="bg-white rounded-full h-10 w-10 flex items-center justify-center relative">
      <h1 class="text-lg text-dark-black"><%= l soliloquy.created_at, format: :day_of_week %></h1>
      <%= render 'diaries/wday', diary_created: soliloquy %>
    </div>
  </div>
  <div class="pt-16">
    <div class="bg-white rounded-3xl">
      <div class="flex justify-center relative h-32 w-64 px-56 pt-12">
        <div class="text-center">
          <p class="text-gray-600 w-48"><%= soliloquy.text %></p>
        </div>
        <div class="absolute right-0 bottom-0 flex justify-center">
          <div class="rounded-full h-8 w-8 flex items-center justify-center bg-white text-dark-black">
            <%= link_to heroicon('pencil-alt', style: :outline,class_name: 'h-4 w-4 text-dark-black'), edit_soliloquy_path(soliloquy) %>
          </div>
          <div class="rounded-full h-8 w-8 flex items-center justify-center bg-white text-dark-black">
            <div x-data="{showDeleteModal:false}" x-bind:class="{ 'model-open': showDeleteModal }">
              <button @click={showDeleteModal=true}><i class="far fa-trash-alt text-dark-black text-sm p-2"></i></button>
              <div x-show="showDeleteModal" tabindex="0" class="z-40 overflow-auto left-0 top-0 bottom-0 right-0 w-full h-full fixed">
                <div @click.away="showDeleteModal = false" class="z-50 relative p-3 mx-auto my-0 max-w-full" style="width: 500px;">
                  <div class="bg-natural rounded-lg shadow-lg border flex flex-col overflow-hidden px-10 py-10">
                    <div class="text-center text-md text-dark-black">本当に削除してよろしいですか？</div>
                    <div class="text-center text-natural mx-24">
                      <%= embedded_svg "undraw_throw_away_re_x60k.svg", class: "h-48 w-48" %>
                    </div>
                    <div class="flex justify-center">
                      <button @click={showDeleteModal=false} class="bg-dark-black text-natural rounded-lg hover:bg-natural hover:text-dark-black w-20 h-8 focus:outline-none mx-1">やめる</button>
                      <%= link_to "削除", soliloquy, method: :delete, class: "flex justify-center bg-red-300 text-dark-black rounded-lg hover:bg-red-400 w-20 h-8 focus:outline-none pt-1 mx-1" %>
                    </div>
                  </div>
                </div>
                <div class="z-40 overflow-auto left-0 top-0 bottom-0 right-0 w-full h-full fixed bg-black opacity-50"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

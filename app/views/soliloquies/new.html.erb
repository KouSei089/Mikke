<div class="px-20 h-screen">
  <%= form_with model: @soliloquy, local: true do |f|%>
    <div class="flex justify-between mb-5">
      <h1 class="text-4xl text-dark-black">つぶやき</h1>
      <%= f.submit 'つぶやく', class: "text-4xl" %>
    </div>
    <%= f.text_field :text, class: "bg-gray-100 border-white rounded-lg w-full h-64 py-2 px-3 text-dark-black focus:border-white focus:ring focus:ring-white", placeholder: "今何考えてますか?" %>
  <% end %>
</div>
